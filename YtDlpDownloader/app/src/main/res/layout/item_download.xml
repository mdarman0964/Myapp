<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_video_placeholder" />

        <!-- Playlist Badge -->
        <TextView
            android:id="@+id/textPlaylistInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_playlist_badge"
            android:padding="2dp 6dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/imageThumbnail"
            app:layout_constraintTop_toTopOf="@id/imageThumbnail"
            tools:text="1/10"
            tools:visibility="visible" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintEnd_toStartOf="@id/textStatus"
            app:layout_constraintStart_toEndOf="@id/imageThumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Video Title That Might Be Very Long And Need Truncation" />

        <!-- Format Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/textFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            app:chipMinHeight="20dp"
            app:chipMinTouchTargetSize="0dp"
            app:layout_constraintStart_toEndOf="@id/imageThumbnail"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            tools:text="MP4" />

        <!-- Quality Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/textQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            app:chipMinHeight="20dp"
            app:chipMinTouchTargetSize="0dp"
            app:layout_constraintStart_toEndOf="@id/textFormat"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            tools:text="BEST" />

        <!-- Status -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DOWNLOADING"
            tools:textColor="@color/status_downloading" />

        <!-- Progress Section -->
        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageThumbnail"
            app:layout_constraintTop_toBottomOf="@id/textFormat">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/progress_horizontal"
                android:visibility="gone"
                tools:progress="45"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:visibility="gone"
                tools:text="45%"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Speed and ETA -->
        <TextView
            android:id="@+id/textSpeedEta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/imageThumbnail"
            app:layout_constraintTop_toBottomOf="@id/progressSection"
            tools:text="2.5 MB/s â€¢ ETA: 00:45"
            tools:visibility="visible" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSpeedEta">

            <ImageButton
                android:id="@+id/buttonPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_pause"
                android:src="@drawable/ic_pause"
                android:visibility="gone"
                app:tint="?attr/colorPrimary"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/buttonResume"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_resume"
                android:src="@drawable/ic_play"
                android:visibility="gone"
                app:tint="?attr/colorPrimary"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/buttonCancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_cancel"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:tint="@color/status_failed"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/buttonRetry"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_retry"
                android:src="@drawable/ic_refresh"
                android:visibility="gone"
                app:tint="?attr/colorPrimary"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/buttonOpen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_open"
                android:src="@drawable/ic_open"
                android:visibility="gone"
                app:tint="@color/status_completed"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/buttonRemove"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_remove"
                android:src="@drawable/ic_delete"
                android:visibility="gone"
                app:tint="@color/status_failed"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_format"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFormatDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMp4Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/format_mp4"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMp3Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/format_mp3"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_quality"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupQualityDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBestDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_best"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHighDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_high"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMediumDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_medium"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLowDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_low"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>
